#!/bin/bash
set -e

# Enable jemalloc
if [ -z "${LD_PRELOAD+x}" ]; then
    LD_PRELOAD=$(find /usr/lib -name libjemalloc.so.2 -print -quit)
    export LD_PRELOAD
fi

# Precompila assets se não existir
if [ ! -d "public/assets" ]; then
  echo "Compilando assets..."
  SECRET_KEY_BASE=${SECRET_KEY_BASE:-DUMMY} ./bin/rails assets:precompile
fi

# Checa se o comando é "rails server"
if [ "$1" = "./bin/rails" ] && [ "$2" = "server" ]; then
  echo "Preparando DB..."
  ./bin/rails db:prepare
  ./bin/rails db:migrate
  echo "Iniciando servidor Rails..."
  exec ./bin/rails server -b 0.0.0.0 -p "${PORT:-3000}"
else
  # Qualquer outro comando
  exec "$@"
fi
